{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {"type": "string"},
    "ruleId": {"type": "string", "defaultValue": "keyvault-firewall-disabled"}
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "apiVersion": "2022-11-01-preview",
      "name": "[format('{0}/Microsoft.SecurityInsights/{1}', parameters('workspaceName'), parameters('ruleId'))]",
      "properties": {
        "displayName": "Key Vault firewall disabled or public network enabled",
        "enabled": true,
        "kind": "Scheduled",
        "query": "AzureActivity | where OperationNameValue has 'Microsoft.KeyVault/vaults' and ActivityStatusValue == 'Succeeded' and (Properties has 'publicNetworkAccess\":\"Enabled' or Properties has 'bypass')",
        "queryFrequency": "PT1H",
        "queryPeriod": "PT24H",
        "severity": "High",
        "suppressionDuration": "PT1H",
        "suppressionEnabled": false,
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "eventGroupingSettings": {"aggregationKind": "SingleAlert"}
      }
    }
  ]
}

