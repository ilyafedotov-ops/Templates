{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {"type": "string"},
    "ruleId": {"type": "string", "defaultValue": "keyvault-mass-secret-access"}
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "apiVersion": "2022-11-01-preview",
      "name": "[format('{0}/Microsoft.SecurityInsights/{1}', parameters('workspaceName'), parameters('ruleId'))]",
      "properties": {
        "displayName": "Key Vault mass secret access",
        "enabled": true,
        "kind": "Scheduled",
        "query": "AzureDiagnostics | where ResourceProvider == 'MICROSOFT.KEYVAULT' and (OperationName has 'SecretGet' or OperationName has 'SecretList') | summarize count() by bin(TimeGenerated, 15m), Resource, CallerIPAddress | where count_ > 50",
        "queryFrequency": "PT15M",
        "queryPeriod": "PT15M",
        "severity": "High",
        "suppressionDuration": "PT1H",
        "suppressionEnabled": false,
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0,
        "eventGroupingSettings": {"aggregationKind": "SingleAlert"}
      }
    }
  ]
}

