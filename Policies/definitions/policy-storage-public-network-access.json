{
  "properties": {
    "displayName": "Deny: Storage accounts with public network access enabled",
    "description": "Requires storage account public network access to be disabled.",
    "policyType": "Custom",
    "mode": "Indexed",
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "Microsoft.Storage/storageAccounts/publicNetworkAccess",
            "equals": "Enabled"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}

